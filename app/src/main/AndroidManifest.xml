<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.br.ifoodclone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IfoodClone">
        <activity android:name=".activities.PedidosActivity"
            android:parentActivityName=".activities.EmpresaActivity"/>
        <activity
            android:name=".activities.CardapioActivity"
            android:parentActivityName=".activities.UsuarioActivity" />
        <activity
            android:name=".activities.ConfiguracaoUsuarioActivity"
            android:parentActivityName=".activities.UsuarioActivity" />
        <activity
            android:name=".activities.NovoProdutoEmpresaActivity"
            android:parentActivityName=".activities.EmpresaActivity" />
        <activity
            android:name=".activities.ConfiguracaoEmpresaActivity"
            android:parentActivityName=".activities.EmpresaActivity" />
        <activity android:name=".activities.EmpresaActivity" />
        <activity android:name=".activities.UsuarioActivity" />
        <activity android:name=".activities.RecuperaActivity" />
        <activity android:name=".activities.AutenticacaoActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>